{
  "name": "abacus-contracts",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ansiToHtml": "npx ts-node ./scripts/ansiToHtml.ts",
    "cs": "npx ts-node ./scripts/compile/compileSingleContract.ts",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "build:debug": "./build.sh $*",
    "build:prod": "env BUILD_PROD=1 ./build.sh $*",
    "deploy": "npx ts-node runWithoutWarnings.ts env DEBUG=1 npx ts-node scripts/deploy.ts $*",
    "deployTest": "npx ts-node runWithoutWarnings.ts env DEBUG=1 npx ts-node scripts/deployTest.ts",
    "benchmark": "npx ts-node runWithoutWarnings.ts npx ts-node scripts/benchmarkPlayground.ts",
    "localnode": "./substrate-contracts-node --dev --tmp -lerror,runtime::contracts=debug --ws-max-connections 5000 --pruning=archive",
    "test:debug": "npx ts-node runWithoutWarnings.ts env DEBUG=1 npx ts-node scripts/runScenarioWithDebug.ts",
    "test": "./runTests.sh",
    "generateTypes": "npx ts-node ./runWithoutWarnings.ts npx typechain-polkadot --in artifacts --out typechain && npx ts-node ./scripts/typechain/replaceQueryCalls.ts && npx ts-node ./scripts/typechain/replaceHandleReturnType.ts && npx ts-node ./scripts/typechain/removeReturnTypesRef.ts && npx ts-node ./scripts/typechain/generateEventsEnum.ts",
    "codeDuplication": "npx jscpd --min-lines 5 --min-tokens 50 --pattern './!(target)/**/*.rs' --reporters html -o jscpd",
    "clippy": "script -efq ./clippy.log -c 'env CARGO_TERM_COLOR=always cargo clippy -- -W clippy::pedantic'",
    "lint": "yarn lint:format && yarn lint:fix",
    "lint:fix": "eslint . --ext .js,.ts --fix --ignore-path ./.gitignore",
    "lint:format": "pretty-quick  --loglevel warn --write \"./**/*.{js,ts,md,json}\" ",
    "prepare": "husky install"
  },
  "dependencies": {
    "@727-ventures/typechain-polkadot": "^1.1.1",
    "@727-ventures/typechain-types": "^1.1.2",
    "@abaxfinance/contract-helpers": "../abax-sdk/packages/contract-helpers",
    "@abaxfinance/utils": "../abax-sdk/packages/utils",
    "@babel/core": "^7.22.10",
    "@babel/plugin-transform-runtime": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/register": "^7.22.5",
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-contract": "^10.9.1",
    "@polkadot/keyring": "^12.4.1",
    "@polkadot/util": "^12.4.1",
    "@polkadot/util-crypto": "^12.4.1",
    "@types/chroma-js": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "ansi-to-html": "^0.7.2",
    "bn.js": "^5.2.1",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-formatter-monkeypatch": "^1.0.1",
    "chart.js": "^4.3.3",
    "chartjs-node-canvas": "^4.1.6",
    "chroma-js": "^2.4.2",
    "color-name-list": "^10.11.0",
    "commander": "^10.0.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "fs-extra": "^11.1.1",
    "glob": "^8.1.0",
    "jscpd": "^3.5.9",
    "json2csv": "^5.0.7",
    "lint-staged": "^13.3.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.1",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/fs-extra": "^11.0.1",
    "@types/glob": "^8.1.0",
    "@types/json2csv": "^5.0.3",
    "@types/lodash": "^4.14.197",
    "@types/mocha": "^10.0.1",
    "husky": "^8.0.3",
    "tsconfig-paths": "^4.2.0"
  },
  "packageManager": "yarn@3.5.1"
}
