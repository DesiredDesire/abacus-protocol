{
  "title": "LendingPool: Borrow negatives (reverts)",
  "description": "Test cases for the deposit function.",
  "note": "include cases for invalid rate modes if we introduce a common interface-like method for borrow",
  "stories": [
    {
      "description": "User 0 deposits 1000 DAI, user 1 deposits 1 WETH as collateral and tries to borrow too much DAI (revert expected)",
      "actions": [
        {
          "name": "mint",
          "args": {
            "reserve": "DAI",
            "amount": "99999999",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "approve",
          "args": {
            "reserve": "DAI",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "deposit",
          "args": {
            "reserve": "DAI",
            "amount": "99999999",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "borrow",
          "args": {
            "reserve": "DAI",
            "amount": "99999999",
            "borrowRateMode": "variable",
            "user": "1"
          },
          "expected": "revert",
          "revertMessage": "InsufficientUserFreeCollateral"
        }
      ]
    }
  ]
